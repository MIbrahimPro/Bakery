<link rel="stylesheet" href="/css/gallery.css">

<div>
    <div class="header">
        <h1>G A L L E R Y</h1>
    </div>
    <div class="subheader">
        <h2>SPECIALS</h2>
        <p>
            - A collection of images of all our special menus (limited
            period items)!
        </p>
    </div>

    <% if (error) { %>
        <div style="padding: 32px; color: red;"><%= error %></div>
    <% } else if (images && images.length === 0) { %>
        <div style="padding: 32px;">No images found in the gallery.</div>
    <% } else { %>
        <div class="masonry-row">
            <% images.forEach(function(img) { %>
                <div class="masonry-item" key="<%= img._id %>">
                    <div class="img-hover-wrap">
                        <img src="<%= img.imageUrl %>" alt="<%= img.title %>" />
                        <div class="img-hover-info">
                            <strong><%= img.title %></strong>
                            <div><%= img.description %></div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>

    <% if (typeof footerdata !== 'undefined' && footerdata) { %>
        <% } %>
</div>